{
  "name": "faesign",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test:visual": "npm run test:percy && npm run test:loki && npm run test:playwright",
    "test:percy": "percy exec -- playwright test tests/visual/percy/",
    "test:percy:core": "percy exec -- playwright test tests/visual/percy/percy-core-pages.spec.js",
    "test:percy:responsive": "percy exec -- playwright test tests/visual/percy/percy-responsive.spec.js",
    "test:percy:components": "percy exec -- playwright test tests/visual/percy/percy-components.spec.js",
    "test:percy:statusmessage": "percy exec -- playwright test tests/visual/percy/percy-statusmessage-exact.spec.js",
    "test:percy:statusmessage:app": "percy exec -- playwright test tests/visual/percy/percy-statusmessage-app.spec.js",
    "test:percy:cloud": "percy exec -- playwright test --config=percy.playwright.config.js --project=chromium --project=firefox --project=webkit",
    "test:percy:cloud:all": "percy exec -- playwright test --config=percy.playwright.config.js",
    "test:percy:cloud:mobile": "percy exec -- playwright test --config=percy.playwright.config.js --project=\"Mobile Chrome\" --project=\"Mobile Safari\"",
    "test:percy:statusmessage:helper": "percy exec -- playwright test tests/visual/percy/percy-statusmessage-helper.spec.js",
    "test:comparison:statusmessage": "npm run test:playwright:statusmessage && npm run test:percy:statusmessage",
    "test:playwright:statusmessage": "playwright test tests/visual/playwright/ --grep \"StatusMessage\"",
    "test:loki": "loki test",
    "test:playwright": "playwright test --trace on",
    "percy:snapshot": "percy snapshot public/",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "playwright:install": "playwright install",
    "loki:update": "loki update"
  },
  "dependencies": {
    "bootstrap": "^5.3.7",
    "react": "^19.1.0",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.1",
    "sweetalert2": "^11.22.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@percy/cli": "^1.31.1",
    "@percy/playwright": "^1.0.9",
    "@percy/storybook": "^9.0.0",
    "@playwright/test": "^1.54.2",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "loki": "^0.35.1",
    "playwright": "^1.54.2",
    "storybook": "^8.6.14",
    "vite": "^6.3.5"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
